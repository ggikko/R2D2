<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android"
    android:paddingRight="10dp">

    <item>
        <shape
            android:shape="rectangle">
            <stroke android:width="1dp" android:color="@color/main" />
            <solid android:color="@color/main" />
            <corners
                android:bottomRightRadius="@dimen/edit_bottomright_radius"
                android:bottomLeftRadius="@dimen/edit_bottomleft_radius"
                android:topLeftRadius="@dimen/edit_topleft_radius"
                android:topRightRadius="@dimen/edit_topright_radius"/>
        </shape>
    </item>

    <item android:bottom="1dp">
        <shape
            android:shape="rectangle">
            <stroke android:width="2dp" android:color="@color/main_text" />
            <solid android:color="@color/main" />
            <corners
                android:bottomRightRadius="@dimen/edit_bottomright_radius"
                android:bottomLeftRadius="@dimen/edit_bottomleft_radius"
                android:topLeftRadius="@dimen/edit_topleft_radius"
                android:topRightRadius="@dimen/edit_topright_radius"/>
        </shape>
    </item>

</layer-list>